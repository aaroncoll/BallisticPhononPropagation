    ax.legend()
    plt.tight_layout()
    plt.show()

# SEPARATE PLOT OF EACH MODE
    fig, ax = plt.subplots(3, 1, figsize=(6, 6), sharex=True)

    ax[0].hist(filtered_times_st, bins=bin_edges, alpha=0.6, color='red', label='ST Mode')
